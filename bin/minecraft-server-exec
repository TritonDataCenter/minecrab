source $(dirname $0)/common.sh

usage() { echo "Usage: $0 [server-name] [exec]" 1>&2; exit 1; }

if [ "$#" -lt 2 ]; then
    usage
fi

SERVER_NAME=$1

shift

find_server $SERVER_NAME
server_execute "$@"
echo "$RESULT"
