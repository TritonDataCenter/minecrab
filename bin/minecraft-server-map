#!/usr/bin/env bash
# -*- mode: shell-script; fill-column: 80; -*-
#
# Copyright (c) 2013 Joyent Inc., All rights reserved.
#

source $(dirname $0)/common.sh

usage() { echo "Usage: $0 <server-name>" 1>&2; exit 1; }

if [ "$#" -ne 1 ]; then
    usage
fi

SERVER_NAME=$1

echo "Finding server..."
find_server $SERVER_NAME

if [ -z "$IP" ]; then
    fatal "Unable to find running $SERVER_NAME server."
fi

echo "Taking latest backup of $SERVER_NAME..."
server_execute "/opt/minecraft/scripts/backup.sh"
if [[ $? -ne 0 ]]; then
    fatal "Was unable to backup your running server."
fi

echo "Running map command from $SERVER_NAME..."
server_execute "/opt/minecraft/scripts/map.sh"
echo "$RESULT"

echo "Done!"
