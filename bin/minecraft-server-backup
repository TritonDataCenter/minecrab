source $(dirname $0)/common.sh

usage() { echo "Usage: $0 [server-name]" 1>&2; exit 1; }

if [ "$#" -ne 1 ]; then
    usage
fi

SERVER_NAME=$1

echo "Finding server..."
find_ip $SERVER_NAME

if [ -z "$IP" ]; then
    fatal "Unable to find $SERVER_NAME server."
fi

server_exec "/opt/minecraft/scripts/backup.sh"

echo "Done!"
